<div class="container">
  <div class="row">
    <div class=“col-md-8 col-md-offset-2” class=“form”>
      <% @reviews.each do |review| %>
      <h3>Add a review for <%= review.order.product.title %></h3>
      <%= simple_form_for [review] do |f| %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.input :content %>
      <%= f.association :order, as: :hidden %>
      <%= f.submit class: "btn-yours"%>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
