<div class="container">
  <div class="row">

    <div class="col-md-8 col-md-offset-2"  style="padding-top: 30px">
      <% @reviews.each do |review|  %>
      <h3><b>Your review for <%= review.order.product.title %></b></h3>
      <div class="imgorder" style="padding-top: 50px">
        <%= cl_image_tag review.order.product.image, height: 150, width: 200, crop: :fill %>
      </div>
      <br>
      <%= simple_form_for [review] do |f| %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.input :content %>
      <%= f.association :order, as: :hidden %>
      <br>
      <%= f.submit class: "btn-yours"%>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

